@import './basic.styl'

.login-container
  display: flex;
  align-content: center; 
  justify-content: center;
  height: 100vh;

  background-size: cover;
  .login-content
    width: 500px;
    margin: auto;
    background: white;
    z-index: 3;
    padding: 30px;
    color: dark-gray;
    box-shadow: 0px 2px 5px 0px #888888;
    border-radius: 5px;
    .logo-container-link
      display: flex;
      justify-content: center;
      align-content: center;
    .logo-center
      margin-top: -150px;
      margin-left: auto;
      margin-right: auto;
      display: grid;
      @media screen and (max-width: mobile) 
        position: absolute;
        top: 0px;
        margin: 0px;
        z-index: -1;
    button 
      color: white;
      font-weight: 800;
      border: 0px;
      justify-self: center;
      align-self: center;
      width: 100%;
      margin-top: 20px;
      box-shadow: 0px 2px 5px 0px #888888;
      background-image: linear-gradient(to right, #00b9fe, #35c2fe, #50cbfe, #66d4ff, #7bdcff);
      height: 63px;
      letter-spacing: 3px;
      &:hover
        filter: brightness(100%)
        box-shadow: 0px 0px 5px 0px #888888;
    h1 
      font-weight: 400;
      text-align: center;
      padding-bottom: 15px;
      margin-top: 0px;
      background: rgba(255, 255, 255, 0.6);
      font-family: roboto;
    form 
      display: grid;
      position: relative;
      label
        font-family: roboto;
      .real-label 
        position: relative;
        top: 40px;
        left: 30px;
        z-index: 3;
        transition: .3s;
        margin: 10px 0;
      .label-active
        top: 0px;
        left: 0px;
      input 
        margin: 0px;
        position: relative;
        background: #FAFAFA;
        border: 0px;
        border-left: 10px solid link-orange;
        border-radius: 5px;
        height: 40px;
        color: dark-gray;
        &:focus 
          outline: 1px solid link-orange;
        
      .below-login 
        display: grid;
        grid-template-columns: 1fr 1fr;
        margin: 20px 0;
        label
          display: flex;
          align-items: center;
        label input 
          display: none;
        label span 
          height: 20px;
          width: 20px;
          border: 1px solid #ccc;
          display: inline-block;
          position: relative;
          margin: 0 10px 0 0;
        [type=checkbox]:checked + span:before 
          content: '\2714';
          position: absolute;
          top: 0px;
          left: 3px;
          color: link-orange;
        div
          text-align: right;
          ul
            list-style: none;
            padding: 0px;
            li
              padding: 5px 0;
              text-transform: uppercase;
              letter-spacing: .1rem;
      

  .bottom
    height: 100%;
    bottom: 0px;
    position: absolute;
    width: 100%;
    z-index: 1;
    left: 0px;
    @media screen and (max-width: mobile) 
      z-index: 4;
      height: auto;
      bottom: 0px;
      top: inherit;
      ul
        display: inline-grid;
        margin: 0px;
  .error-area
    width: 100%;
    box-shadow: 0px 2px 5px 0px #888888;
    text-align: center;
    padding: 10px;
    color: font-gray;
    font-weight: 600;
    position: relative;
    justify-content: center;
    border-radius: 5px;
    display: flex;
    &:before 
      content: '!';
      position: absolute;
      top: 0px;
      left: -10px;
      font-size: 2rem;
      font-family: fira-sans, sans-serif;
      font-weight: 800;
      color: link-orange;
    b 
      color: link-orange;
    .error 
      max-width: 350px;
