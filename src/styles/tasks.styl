.images-selection
  position: relative;
  width: auto;
  display: inline-block;
  &:hover
    button
      display: block;
  button
    display: none;
    position: absolute;
    width:100%;
    top: 0px;
    left: 0px;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    border: 0px;
    color: white;
    font-weight: 800;

.task-container 
  display: grid;
  flex-wrap: wrap;
  .task-nav-container 
    display: flex;
    grid-gap: 20px;
    p
      background: white;
      padding: 10px;
      border-radius: 3px;
  .individual-task-container 
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr))
    .individual-task
      margin: 10px;
      background: white;
      padding: 10px;
      box-sizing: border-box;
      border-radius: 4px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.15);
      img 
        width: 100px;
        height: 100px;
        object-fit: cover;

.task-CIC-fill-in 
  text-align: center;
  .CIC-image-container
    width: 100%;
    max-width: 800px;
    margin: auto;
    img 
      width: 100%;
      object-fit: cover;