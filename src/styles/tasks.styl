.images-selection
  position: relative;
  width: auto;
  display: inline-block;
  &:hover
    button
      display: block;
  button
    display: none;
    position: absolute;
    width:100%;
    top: 0px;
    left: 0px;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    border: 0px;
    color: white;
    font-weight: 800;

.task-container 
  display: inline-flex;
  flex-wrap: wrap;
  .individual-task
    max-width: 200px;
    margin: 10px;
    img 
      width: 100px;
      height: 100px;
      object-fit: cover;

.task-CIC-fill-in 
  text-align: center;
  .CIC-image-container
    width: 100%;
    max-width: 800px;
    margin: auto;
    img 
      width: 100%;
      object-fit: cover;