//password selection
.password-selection 
    background: #393939;
    padding: 30px;
    box-sizing: border-box;
.row 
  display: grid;
  grid-template-columns: repeat(6, 80px);
  position:relative;
  justify-items: center;
  align-items: center;
  grid-gap: 10px;
  span
    position: relative;
    cursor: pointer;
    height: 100%;
    width: 100%;
    &:hover 
      background: #272727;
    input 
      position: absolute;
      width: 100%;
      height: 100%;
      z-index: 2;
    object 
      pointer-events:none;
      z-index:1;
      width: 100%;
      height: 100%;
      padding: 5px;
      box-sizing: border-box;
  .notSelected 
    border: 0px;
    opacity: 0.2;
  .selected 
    border: 1px solid white;
    border-radius: 10px;
    opacity: 1;

.welcome-question
  form
    background-image: linear-gradient(to right, #444444 33%, rgba(255,255,255,0) 0%);
    background-position: top;
    background-size: 8px 1px;
    background-repeat: repeat-x;
    padding: 20px;
    text-align: center;
  h1
    strong
      color: #cb7c00;
      text-decoration: underline;
// student login 
.student-login-container
  position: relative;
  background: white;
  width: 100%;
  height: 100vh;
  padding: 10px;
  z-index: 2;
  box-sizing: border-box;
  .teacher-corner
    position: fixed; 
    bottom: 20px;
    right: 20px;
  &:before
    background: linear-gradient(to right, #d16ba5, #c674bd, #b47fd4, #9a8be7, #7597f5, #55a7fd, #30b6ff, #00c3ff, #00d7ff, #00e8ed, #00f6c4, #00ff8c);
    animation: AnimationName 10s ease infinite;
    width: 100%;
    height: 100%;
    background-size: 200% 200%;
    content: ' ';
    position: fixed;
    top: 0px;
    right: 0px;
    z-index: -1;
  .student-login-inner
    color: #393939;
    background: white;
    width: 100%;
    height: 100%;
    padding: 30px;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-content: center;
    .three-dot
      font-size:50px;
      position: fixed;
      top: 0px;
      right: 30px;
      .active
        color: #03CC25
    .password-container
      max-width: 600px;
    button 
      font-family: sophisto, sans-serif;
      font-weight: 800;
      padding: 10px;
      box-sizing: border-box;
      background: #00FF55;
      border: 0px;
      color: white;
      font-size: 20px;
      cursor: pointer;
      margin: auto;
      display: flex;
    input
      width: 100%;
      border-radius: 10px;
      height: 60px;
      border: 1px solid #CCC;
      padding: 5px;
      font-size: 25px;
      margin: 10px 0;
      box-sizing: border-box;
    .error 
      background: #ff005a;
      padding: 10px;
      color: white;
      font-size: 1.3rem;
      position: relative;
      strong
        text-decoration: underline;
        font-size: 35px;
      &:before 
        content: "!";
        font-size: 50px;
        position: absolute;
        top: -10px;
        left: -30px;
        color: #ff005a;
    .check-username
      text-align: center;
      height: auto;
      align-self: center;
      width: 700px;
      h1
        margin: 0px;
      form
        background-image: linear-gradient(to right, #444444 33%, rgba(255,255,255,0) 0%);
        background-position: bottom;
        background-size: 8px 1px;
        background-repeat: repeat-x;
        padding: 20px;
        label
          font-weight:600;


@keyframes AnimationName {
    0%{background-position:10% 50%}
    50%{background-position:100% 51%}
    100%{background-position:10% 50%}
}


