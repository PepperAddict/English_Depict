.student-container 
  display: grid;
  grid-template-columns: 1fr 2fr;
  grid-gap: 20px;
  box-sizing: border-box;
  width: 100%;
  max-width: 1200px;
  .individual-students
    width: 100%;
    a 
      width: 100%;
      padding: 5px 15px;
      box-sizing: border-box;
      button 
        width: 100%;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.15);
        border-radius: 4px;
        background: white;
        border: 0px;
        display: grid;
        grid-template-columns: 1fr 2fr;
  .welcome-hero
    font-family: utopia-std, serif;
    font-weight: 700;
    font-style: normal;
    text-align: center;
    strong
      color: #00a3e7;
    .message 
      font-size:2rem;
.blog-content 
  cursor: pointer;
  &:hover {
    border-bottom: 1px solid black;
  }

.students-blog 
  background: #fffde8;

.percent-bar 
  background: green;

.avatar 
  display: flex;
  width: 100px;
  height: 100px;
  margin: auto;
  .avatar-image 
    object-fit: cover;
    border-radius: 50%;
    width: 100%;
    height: 100%;
