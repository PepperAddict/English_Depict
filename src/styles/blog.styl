.student-container 
  display: grid;
  grid-template-columns: 1fr 2fr 1fr;
.blog-content 
  cursor: pointer;
  &:hover {
    border: 1px solid black;
  }

.students-blog 
  background: #fffde8;

.percent-bar 
  background: green;

.avatar 
  display: flex;
  width: 100px;
  height: 100px;
  .avatar-image 
    object-fit: contain;
    border-radius: 50%;
    width: 100%;
    height: 100%;

.not-button 
  background: none;
  padding: 10px;
  border: 0px;

.duped 
  background: blue;
  color: white;