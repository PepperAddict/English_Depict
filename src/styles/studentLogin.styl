.row 
  display: flex;
  position:relative;
  span
    position: relative;
    input 
      position: absolute;
      width: 100%;
      height: 100%;
      z-index: 2;
    object 
      pointer-events:none;
      z-index:1;
  .notSelected 
    border: 0px;
  .selected 
    border: 1px solid black;

