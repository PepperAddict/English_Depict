.blog-container 
  form
    position: relative;
  textarea
    width: 100%;
    min-height: 500px;
    margin: 10px 0;
    position: relative;
    font-size: 18px;
    padding: 15px;
    box-sizing: border-box;
  .blog-button
    background: #03CC25;
    font-size: 18px;
    color: white;
    position: absolute;
    right: 0px;
    top: -50px;
.blog-container-comment
  form
    position: relative;
  textarea
    width: 100%;
    min-height: 300px;
    margin: 10px 0;
    position: relative;
    font-size: 18px;
    padding: 15px;
    box-sizing: border-box;
  .blog-button
    background: #03CC25;
    font-size: 18px;
    color: white;


.student_blogs
  box-sizing: border-box;
  width: 100%;
  padding: 30px 10px;
  h2 
    padding-bottom: 5px;
  .blog
    width: 100%;
    padding: 10px;
    box-sizing: border-box;
    margin-bottom: 20px;
    border: 1px solid #ccc;
    padding-bottom: 20px;
    position: relative;
    .date
      text-align: right;
      padding-right: 80px;
    .blog-content-container
      margin: 20px 0;
      padding: 15px 0px;
    .author
      text-align: right;
    .avatar
      position: absolute;
      top: 0px;
      right: 0px;
      width: auto;
      height: auto;
      .avatar-image
        width: 50px;
        height: 50px;