@import url("https://use.typekit.net/rbt3pze.css");

dark-gray = #6A6A6A;
light-green = #0f5;
button-green = #00d41e;
link-orange = #ff8a00;
font-gray = #414141;

body, html {
  font-family: roboto;
  height: 100%;
  margin: 0px;
}
button {
  cursor: pointer;
  padding:10px;
  border: 1px solid #ccc;
  font-size: 1rem;
  text-transform: uppercase;
}

hr {
    width: 100%;
    height: 1px;
    background: none;
    margin: 20px 0px;
    border: 0px;
    border-bottom: 1px solid #ccc;
}

input {
  width: 100%;
  min-height: 30px;
  font-size: 18px;
  padding: 5px;
  box-sizing: border-box;
  color: link-orange;
  font-weight: 600;
}
a {
  text-decoration: none;
  color: link-orange;
}
.error {
  text-align: center;
  background: #ffea00;
  padding: 10px;
  color: font-gray;
  font-weight: 600;
}
span {
  margin-right: 5px;
}
