.list-of-vocabularies
  display: flex;
  flex-wrap: wrap;
  margin: 20px 0px;
  border-top: 1px solid #ccc;
  padding-top: 20px;
  .section-word
    position: relative;
    margin: 0px 10px;
  .selected-definition

    width: 100%;
    right: 380px;
    border: 1px solid #ccc;
    background: white;
    padding: 10px;
    box-sizing: border-box;
    .x-close 
      float: right;
      cursor: pointer;
      padding: 5px;
      border: 1px solid #ccc;
  .definition 
    margin: 15px 0px;
    border-top: 1px solid #ccc;
    padding-top: 10px;
    p
      background: #eee;
      padding: 5px;
      margin: 5px 0;
      display:flex;
      flex-wrap: wrap;
      span
        margin-right: 5px;
        cursor: pointer;
        &:hover 
          border-bottom: 1px solid black;
  .duped 
    background: #dc7200;
    color: white;
  .vocabulary
    border: 1px solid #ccc;
    text-align: center;
    position: relative;
    padding: 10px;
    cursor: pointer;
    transition: .5s;
    &:hover
      background: #dc7200
      color: white;
      transition: .5s;
  button.not-button 
    position: absolute;
    top: 5px;
    right: -3px;
    border: 1px solid #ccc;
    cursor: pointer;
    line-height: 10px;
    transition: .5s;
    font-size: 30px;
    color: #ccc;
    background-color: white;
    padding: 5px;
    &:hover
      color: #ff005a
      transition: .5s;
.student-vocabulary 
  width: 100%;
  box-sizing: border-box;
  display: block;
  padding: 15px;
  .new-vocab
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    box-sizing: border-box;
  .vocab-def
    display: block;
    border: 1px solid #ccc;
    padding: 15px;
    box-sizing: border-box;
    .is-button
      padding: 10px;
      width: 100%;
      border: 0px;
      background: #03CC25;
      font-size: 18px;
      color: white;
      strong
        font-weight: 800;
    .not-button
      position: absolute;
      top: 10px;
      right: 10px;
      background: white;
      border: 1px solid #ccc;
      font-size: 18px;
      padding: 5px;
      cursor: pointer;
      &:hover 
        color: #ff005a
    p
      background: #eee;
      padding: 5px;
    h2
      strong
        color: #FF8800
        font-family: rumba-extra, sans-serif;
        font-weight: 400;
        font-style: normal;
        font-size: 2rem;
  .vocab-bucket 
    display: block;
    box-sizing: border-box;
    border: 1px solid #ccc;
    padding: 10px;
    margin-top: 15px;
    form
      max-width: 300px;
      text-align: center;
      display: block;
      margin: 30px auto;
    .submit-word
      background: #03CC25;
      color: white;
      padding: 10px;
      border: 0px;
      font-weight: bold;
      font-size: 18px;

    h2
      text-align: center;
    input
      height: 40px;
      margin: 10px 0;
      padding: 5px;
      box-sizing: border-box;
      border: 1px solid #ccc;