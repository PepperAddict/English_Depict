{
    "taskDefinition": {
      "family": "talkingFargate",
      "containerDefinitions": [
        {
          "name": "talkingrepository",
          "image": "403643908280.dkr.ecr.us-east-1.amazonaws.com/talkingrepository:latest",
          "cpu": 100, 
          "portMappings": [
            {
              "protocol": "tcp",
              "containerPort": 80,
              "hostPort": 80
            }
          ],
          "requiresCompatibilities": [
            "FARGATE"
          ],
          "networkMode": "awsvpc",
          "memory": 128,
          "essential": true
        }
      ]
    }
  }